@using CompanyWeb.Data.Entities;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int ID = int.Parse(ViewBag.AbountId.ToString());
    List<dEmployee> lstEmployee = ViewBag.employee;
    sSystem sys = ViewBag.system;
    string About = "";
    int delay = 0;
    if (ID == 1)
    {
        About = "Lịch sử hình thành";
    }
    else if (ID == 2)
    {
        About = "Giá trị cốt lõi và sứ mệnh";
    }
    else if (ID == 3)
    {
        About = "Đội ngũ nhân viên";
    }
    else if (ID == 4)
    {
        About = "Liên hệ";
    }
    else if (ID == 5)
    {
        About = "FAQ";
    }
}

<main id="main">
    <div class="breadcrumbs d-flex align-items-center" style="background-image: url('/Temps/assets/img/breadcrumbs-bg.jpg');">
        <div class="container position-relative d-flex flex-column align-items-center" data-aos="fade">
            <h2>@About</h2>
            <ol>
                <li><a href="index.html">Trang chủ</a></li>
                <li>@About</li>
            </ol>

        </div>
    </div>

    @if (ID == 1)
    {
        <section id="about" class="about">
            <div class="container" data-aos="fade-up">
                <div class="row position-relative">
                    <div class="col-lg-7 about-img" style="background-image: url(/Temps/LoGoDoiTac/logo123.jpg);"></div>
                    <div class="col-lg-7 story-detail">
                        <h2>Lịch sử hình thành</h2>
                        <div class="our-story">
                            @if (sys != null)
                            {
                                @Html.Raw(sys.History)
                                @*<h4>20/4/2023</h4>
                        <h3>Công ty chính thức được thành lập</h3>
